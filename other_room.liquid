<div class="box-shadow box-white room-page">
  <div class="row">
    <div class="col-md-4">
      {{room.description}}
    </div>
    <div class="col-md-8">
      {% if room.website_custom_room_photos.size > 0 %}
        <div class="big-photo">
          <img src="{{ room.website_custom_room_photos.first.image | attachment_url: 'public_big' }}" />
        </div>
        <div class="small-photos">
          <ul>
            {% for photo in room.website_custom_room_photos %}
              {% if forloop.index0 == 0 %}
                <li class="active">
              {% else %}
                <li>
              {% endif %}
                </li>
                <a href="{{photo.image | attachment_url: 'public_big'}}">
                  <img src="{{photo.image | attachment_url: 'public_small'}}" class="hidden-xs" />
                  <img src="{{photo.image | attachment_url: 'public_big' }}" class="hidden-sm hidden-lg hidden-md" />
                </a>
              </li>
            {% endfor %}
          </ul>
        </div>
      {% endif %}
    </div>
  </div>
</div>
