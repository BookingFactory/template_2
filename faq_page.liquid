<div class="box-shadow box-white faq">
  <h2>
    {{website_data.faq_title}}
  </h2>
  {% for question in website_data.questions limit: 5 offset: 0 %}
    <div class="question-block">
      <p class="question">
        <i class="fa fa-question-circle"></i>
        {{question.question}}
      </p>
      <p class="anwser">
        {{question.answer}}
      </p>
    </div>
  {% endfor %}
  {% if website_data.questions.size > 6 %}
    <div class="invisible-questions">
      {% for question in website_data.questions limit: website_data.questions.size -1 offset: 6 %}
        <div class="question-block">
          <p class="question">
            <i class="fa fa-question-circle"></i>
            {{question.question}}
          </p>
          <p class="anwser">
            {{question.answer}}
          </p>
        </div>
      {% endfor %}
    </div>
    <a class="show-more" href="#">
      Show more questions
      <i class="fa fa-caret-down"></i>
    </a>
  {% endif %}
</div>
